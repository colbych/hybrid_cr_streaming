	Eprint = {1809.10809},
	Groups = {dam:6},
	Journal = {\mnras},
	Keywords = {acceleration of particles, plasmas, radiation mechanism: non-thermal; shock waves},
	Month = jun,
	Pages = {5105-5119},
	Primaryclass = {astro-ph.HE},
	Title = {Kinetic simulations of mildly relativistic shocks - I. Particle acceleration in high Mach number shocks},
	Url = {http://adsabs.harvard.edu/abs/2019MNRAS.485.5105C},
	Volume = {485},
	Year = {2019},
	Bdsk-Url-1 = {http://adsabs.harvard.edu/abs/2019MNRAS.485.5105C},
