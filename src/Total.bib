	author = {F. Giordano and M. Naumann-Godo and J. Ballet and K. Bechtol and S. Funk and J. Lande and M. N. Mazziotta and S. Rain{\`{o}} and T. Tanaka and O. Tibolla and Y. Uchiyama},
	title = {{FERMI}
		                    {LARGE} {AREA} {TELESCOPE} {DETECTION} {OF} {THE} {YOUNG} {SUPERNOVA} {REMNANT} {TYCHO}},
	journal = {The Astrophysical Journal},
	abstract = {After almost three years of data taking in sky-survey mode, the Fermi Large Area Telescope has detected γ-ray emission toward Tycho's supernova remnant (SNR). The Tycho SNR is among the youngest remnants in the Galaxy, originating from a Type Ia Supernova in AD 1572. The γ-ray integral flux from 400 MeV up to 100 GeV has been measured to be (3.5 ± 1.1stat ± 0.7syst)× 10−9 cm−2 s−1 with a photon index of 2.3 ± 0.2stat ± 0.1syst. A simple model consistent with TeV, X-ray, and radio data is sufficient to explain the observed emission as originating from π0 decays as a result of cosmic-ray acceleration and interaction with the ambient medium.}
}


@article{han17,
author = {Han, J.L.},
title = {Observing Interstellar and Intergalactic Magnetic Fields},
journal = {Annual Review of Astronomy and Astrophysics},
volume = {55},
number = {1},
pages = {111-157},
year = {2017},
doi = {10.1146/annurev-astro-091916-055221},

URL = { 
